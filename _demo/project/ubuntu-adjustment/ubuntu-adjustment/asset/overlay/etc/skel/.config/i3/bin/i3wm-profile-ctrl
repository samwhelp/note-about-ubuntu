	local cmd_name="$THE_CMD_FILE_NAME"

cat << EOF

Usage:

	$ $cmd_name keybind [name]

Example:

	## help

		$ $cmd_name keybind_help

	## get

		$ $cmd_name keybind

	## set

		$ $cmd_name keybind 'default'
		$ $cmd_name keybind 'default_enhance'
		$ $cmd_name keybind 'main'


	## set default or favorite

		$ $cmd_name keybind_default
		$ $cmd_name keybind_favorite


EOF

}


mod_keybind () {

	local keybind="$1"

	if [ "none${keybind}" = "none" ]; then
		sys_i3wm_get_keybind
		return
	fi

	sys_i3wm_set_keybind "$keybind"

}

##
### Tail: Model / keybind
################################################################################


################################################################################
### Head: SubCmd / keybind
##

sub_run_keybind () {
	#echo "sub_run_keybind"
	mod_keybind "$@"
}

sub_run_keybind_help () {
	#echo "sub_run_keybind_help"
	mod_keybind_usage "$@"
}

sub_run_keybind_default () {
	#echo "sub_run_keybind_default"

	sys_i3wm_set_keybind_default
}

sub_run_keybind_favorite () {
	#echo "sub_run_keybind_favorite"

	sys_i3wm_set_keybind_favorite
}


##
### Tail: SubCmd / keybind
################################################################################


################################################################################
### Head: Model / rule
##

mod_rule_usage () {

	local cmd_name="$THE_CMD_FILE_NAME"

cat << EOF

Usage:

	$ $cmd_name rule [name]

Example:

	## help

		$ $cmd_name rule_help

	## get

		$ $cmd_name rule

	## set

		$ $cmd_name rule 'default'
		$ $cmd_name rule 'main'


	## set default or favorite

		$ $cmd_name rule_default
		$ $cmd_name rule_favorite


EOF

}


mod_rule () {

	local rule="$1"

	if [ "none${rule}" = "none" ]; then
		sys_i3wm_get_rule
		return
	fi

	sys_i3wm_set_rule "$rule"

}

##
### Tail: Model / rule
################################################################################


################################################################################
### Head: SubCmd / rule
##

sub_run_rule () {
	#echo "sub_run_rule"
	mod_rule "$@"
}

sub_run_rule_help () {
	#echo "sub_run_rule_help"
	mod_rule_usage "$@"
}

sub_run_rule_default () {
	#echo "sub_run_rule_default"

	sys_i3wm_set_rule_default
}

sub_run_rule_favorite () {
	#echo "sub_run_rule_favorite"

	sys_i3wm_set_rule_favorite
}


##
### Tail: SubCmd / rule
################################################################################


################################################################################
### Head: SubCmd / self_actions
##

sub_run_self_actions () {
	util_self_actions "$@"
}

##
### Tail: SubCmd / self_actions
################################################################################


################################################################################
### Head: SubCmd / help
##

sub_run_help () {
	main_usage "$@"
}


##
### Tail: SubCmd / help
################################################################################


################################################################################
### Head: Util / SubCmd
##

sub_cmd_find_function_name () {
	echo "sub_run_$1"
}

##
### Tail: Util / SubCmd
################################################################################


################################################################################
### Head: Main
##

main_usage () {
	##local cmd_name="$0"
	local cmd_name="i3wm-profile-ctrl"

cat << EOF
Usage:
	$ $cmd_name [action]

Example:

	## help

		$ $cmd_name
		$ $cmd_name help

	## self_actions

		$ $cmd_name self_actions

	## wm_theme

		$ $cmd_name wm_theme
		$ $cmd_name wm_theme_default
		$ $cmd_name wm_theme_favorite
		$ $cmd_name wm_theme_help

	## keybind

		$ $cmd_name keybind
		$ $cmd_name keybind_default
		$ $cmd_name keybind_favorite
		$ $cmd_name keybind_help

	## rule

		$ $cmd_name rule
		$ $cmd_name rule_default
		$ $cmd_name rule_favorite
		$ $cmd_name rule_help

Debug:
	$ export DEBUG_I3WM=true

EOF

}

main_check_args_size () {
	if [ $1 -le 0 ]; then
		shift
		main_run_default_sub_cmd "$@"
		exit 1
	fi
}

main_run_default_sub_cmd () {
	main_usage "$@"
}

main_run_sub_cmd () {

	local sub_cmd="$1"

	shift

	local function_name="$(sub_cmd_find_function_name "$sub_cmd")"

	if ! is_function_exist "$function_name" ; then

		util_debug_echo "[Debug] sub_cmd_function_not_exist: sub_cmd=$sub_cmd; function_name=$function_name"

		echo

		main_run_default_sub_cmd "$@"

		return 1

	fi

	"$function_name" "$@" ## run sub cmd function


}

## Start
cmd_var_init "$@"

main_check_args_size $# "$@"

main_run_sub_cmd "$@"

##
### Tail: Main
################################################################################
